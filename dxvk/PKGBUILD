pkgname=dxvk-winelib
pkgver=1.9
pkgrel=1
pkgdesc="A Vulkan-based compatibility layer for Direct3D 9/10/11 which allows running 3D applications on Linux using Wine (Windows DLL binary files)"
url="https://github.com/doitsujin/dxvk"
license=('zlib/libpng')
arch=('x86_64')
depends=('wine')
provides=("winedxvk")
options=(!strip)
source=( "https://github.com/doitsujin/dxvk/releases/download/v${pkgver}/dxvk-${pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
        install -Dm755 "dxvk-$pkgver"/x32/* -t "$pkgdir/usr/lib/wine/fakedlls/dxvk/x32"
        install -Dm755 "dxvk-$pkgver"/x64/* -t "$pkgdir/usr/lib/wine/fakedlls/dxvk/x64"
	install "dxvk-$pkgver"/setup_dxvk.sh -t "$pkgdir/usr/lib/wine/fakedlls/dxvk/"
        install -d "$pkgdir/usr/bin"
        ln -s /usr/lib/wine/fakedlls/dxvk/setup_dxvk.sh "$pkgdir/usr/bin/winedxvk"
}
