pkgname=dxvk
pkgver=1.9
pkgrel=1
pkgdesc="A Vulkan-based compatibility layer for Direct3D 9/10/11 which allows running 3D applications on Linux using Wine (Windows DLL binary files)"
url="https://github.com/doitsujin/dxvk"
license=('zlib/libpng')
arch=('x86_64')
provides=("dxvk" "d9vk" "dxvk=$pkgver")
conflicts=("dxvk" "d9vk")
options=(!strip)
source=( "https://github.com/doitsujin/${pkgname}/releases/download/v${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=('SKIP')

package() {
        install -Dm755 "dxvk-$pkgver"/x32/* -t "$pkgdir/usr/lib/dxvk/x32"
        install -Dm755 "dxvk-$pkgver"/x64/* -t "$pkgdir/usr/lib/dxvk/x64"
	install "dxvk-$pkgver"/setup_dxvk.sh -t "$pkgdir/usr/lib/dxvk/"
        install -d "$pkgdir/usr/bin"
        ln -s /usr/lib/dxvk/setup_dxvk.sh "$pkgdir/usr/bin/dxvk"
}
