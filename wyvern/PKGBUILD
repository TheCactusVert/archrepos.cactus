# Maintainer: Amy Wilson <awils_1 at xsmail dot com>
pkgname="wyvern"
pkgver="1.4.4"
pkgrel="1"
pkgdesc="Command-line tool written in rust that is meant to make downloading GOG games and associated activities easier and faster on linux."
arch=("x86_64")
url="https://git.sr.ht/%7Enicohman/wyvern/"
license=("GPL")
makedepends=("rust")
depends=("curl")
optdepends=('rsync: Sync suppport'
	    'innoextract: Windows (GOG) game installation')
source=("$pkgname-$pkgver.tar.gz::https://github.com/TheCactusVert/${pkgname}/archive/refs/tags/${pkgver}.tar.gz")
md5sums=('SKIP')

build() {
  cd ${pkgname}-${pkgver}
  cargo build --release
}

package() {
  cd ${pkgname}-${pkgver}
  install -Dm 755 "target/release/${pkgname}" -t "$pkgdir/usr/bin"
}

